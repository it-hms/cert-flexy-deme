{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "javac -Xlint:-options -source 1.4 -target 1.4 -cp ./ewon-java-etk.jar -d bin $(find $SRC_FOLDERS -name \"*.java\")",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "ant_build",
            "type": "shell",
            "command": "ant \"buildjar\" -noinput -buildfile build.xml",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },
        {
            "label": "compile and build",
            "type": "shell",
            "dependsOn": ["compile", "ant_build"],
            "group": "build"
        },
        {
            "label": "deploy_run",
            "type": "shell",
            "group": "test",
            "command": "ant \"startdeploy\"  -lib ./deploy -noinput -buildfile build.xml",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        },{
            "label": "deploy_stop",
            "type": "shell",
            "group": "test",
            "command": "ant \"stop\"  -lib ./deploy -noinput -buildfile build.xml",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        }
    ]
}